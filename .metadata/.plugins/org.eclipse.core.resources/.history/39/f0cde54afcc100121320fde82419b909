package catchClient;

import java.awt.BorderLayout;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import java.io.BufferedReader;
import java.io.OutputStreamWriter;
import java.io.PrintWriter;
import java.net.Socket;
import javax.swing.JFrame;
import javax.swing.WindowConstants;

import Client.Client;
import Client.ColorBar;
import catchClient.SoundEffect;

public class ClientFrame extends JFrame{
	private static ClientFrame uniqueFrame = new ClientFrame("Client");
	private Client client;
	private ColorBar colorbar;
	
	private Socket socket;
	private PrintWriter writer;
	private BufferedReader reader;
	
	private ClientFrame(String title){
		super(title);
		
		client = new Client();
		client.setSize(600, 600);
		add(client);
		
		colorbar = new ColorBar("Color", client);
		add(BorderLayout.SOUTH, colorbar);
		
				
//		SoundEffect.init();
//		SoundEffect.volume = SoundEffect.Volume.LOW;
//		SoundEffect.BGM.play();

	}
	
	public static ClientFrame getInstance(){
		return uniqueFrame;
	}
	
	public void init(){
		colorbar.init(colorbar);
		
		setDefaultCloseOperation(WindowConstants.EXIT_ON_CLOSE);
		setSize(600, 600);
		setVisible(true);
	}
		
}
