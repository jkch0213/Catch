		this.setSize(WIDTH,HEIGHT);

		LoginRoom();
		idlistpanel = new IDlistPanel();
		Thread Catchmind;
		Catchmind = new Thread(this);	// 스레드 생성
		Catchmind.start();
		//while(loginPanel.LoginCheck());
		//WaitRoom();
		
		
	}
